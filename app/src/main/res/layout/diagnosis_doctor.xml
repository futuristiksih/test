<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/annotate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:text="Annotate Images"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/tag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/medication_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Medication"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp" />
            <Button
                android:id="@+id/addMed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="ADD"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

    <ListView
        android:id="@+id/MedAddList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/testimonal_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Patient Testimonal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <Button
                android:id="@+id/addTest"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="ADD"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <ListView
            android:id="@+id/TestAddList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    </ScrollView>


</RelativeLayout>